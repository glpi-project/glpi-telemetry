<div class="container-fluid px-4">
    <div class="row g-3 mt-1">

        <div class="d-flex flex-row align-items-end">
            <h2 class="mb-0">Data filter</h2>
            <p class="mb-0 px-2">The default period is set on the last 12 months. You can change it below.</p>
        </div>

            <div class="col-md-3 mb-3">
                <div class="form-floating">
                    <input type="text" id="dateRange" class="form-control" placeholder="Select">
                    <label for="dateRange">Select</label>
                </div>
            </div>
    </div>
</div>

<script>
window.addEventListener("DOMContentLoaded", (event) => {

    var today = moment().format();
    var defaultDate = moment().subtract(12, 'months').format();

    const picker = new easepick.create({
        element: document.getElementById('dateRange'),
        css: [
            "https://cdn.jsdelivr.net/npm/@easepick/bundle@1.2.1/dist/index.css",
        ],
        plugins: [AmpPlugin, RangePlugin, PresetPlugin],
        zIndex: 10,
        AmpPlugin: {
            dropdown: {
                minYear: 2000,
                months: true,
                years: true
            },
            darkMode: false
        },
        RangePlugin: {
            tooltip: true,
            startDate: defaultDate,
            endDate: today,
        }
    });

    picker.on('select', (e) => {
        var startDate = picker.getStartDate();
        var endDate = picker.getEndDate();
    });
});

</script>