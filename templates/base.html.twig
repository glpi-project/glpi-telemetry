<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}GLPI Telemetry{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/styles/app.css') }}" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}" defer></script>
            <script>
                {# Analytics config and data stack #}
                {# Will not be sent unless user consents to analytics cookies usage #}
                window.google_analytics_id = '{{ google_analytics_id|e('js') }}';
                window.dataLayer = window.dataLayer || [];
                function gtag() {
                    dataLayer.push(arguments);
                }
                gtag('js', new Date());
                gtag(
                    'config',
                    google_analytics_id,
                    {
                        send_page_view: {{ block('google_analytics_send_page_view') is defined ? block('google_analytics_send_page_view') : 'true' }}
                    }
                );
            </script>
        {% endblock %}
    </head>
    <body>
        <div class="page">
            {% include 'header.html.twig' %}
            <div class="page-wrapper">
                <div class="page-body">
                    {% set flashes = app.flashes() %}
                    {% if flashes is not empty %}
                        <div class="container container-tight mb-4">
                            {% for type, messages in flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ type }}">{{ message }}</div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% block body_content %}
                    {% endblock %}
                </div>

                {% include 'footer.html.twig' %}
            </div>
        </div>
    </body>
</html>
