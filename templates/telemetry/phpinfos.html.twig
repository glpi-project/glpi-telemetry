<div class="col-sm-6 col-lg-6">
    <div class="card">
        <div class="d-flex flex-row-reverse p-2 pb-0">
            <button type="button" class="btn p-1 openModal">
                <i class="ti ti-arrows-maximize"></i>
            </button>
        </div>
        <div class="card-body default-size pt-0" id="php_version">
        </div>
    </div>
</div>


<script>
window.addEventListener("DOMContentLoaded", (event) => {
    var chartDom = document.getElementById('php_version');
    var myChart = echarts.init(chartDom);

    var option;

    option = {
        title: {
            text: 'PHP Versions',
            left: 'center',
            textStyle: {
                fontSize: 15
            }
        },
        tooltip: {
            trigger: 'axis',
            axisPointer: {
            type: 'line'
            },
            valueFormatter: function (value) {
                return value.toFixed(2) + ' %';
            },
        },
        grid: {
            left: '3%',
            right: '3%',
            bottom: '2%',
            containLabel: true
        },
        xAxis: [{
            type: 'category',
            axisTick: {
            alignWithLabel: true
            },
            axisLabel: {
            rotate: 30
            },
            data: []
        }],
        yAxis: [{
            type: 'value',
            axisLabel: {
                formatter: '{value} %'
            },
            min: 0,
            max: 100,
        }],
        series: []
    };

    option && myChart.setOption(option);

 window.registerFilterCallback(function (filters) {
        var url = 'php/version?' + new URLSearchParams(filters);

        fetch(url, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(response => {
            return response.json();
        })
        .then(json => {
            myChart.setOption({
                xAxis: {data: json.xAxis.data},
                series: json.series,
            });
        })
        .catch(error => {
            console.error('an error occured: ', error);
        });

    })
});
</script>
