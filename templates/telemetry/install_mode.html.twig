<div class="col-sm-6 col-lg-4">
    <div class="card">
        <div class="d-flex flex-row-reverse p-2 pb-0">
            <button type="button" class="btn p-1 openModal">
                <i class="ti ti-arrows-maximize"></i>
            </button>
        </div>
        <div class="card-body default-size pt-0" id="install_mode">
        </div>
    </div>
</div>

<script>
window.addEventListener("DOMContentLoaded", (event) => {

    var chartDom = document.getElementById("install_mode");
    var myChart = echarts.init(chartDom);

    option = {
        title: {
            text: 'Install mode',
            left: 'center'
        },
        tooltip: {
            formatter: '{b}: {d}%'
        },
        series: [
            {
            type: 'pie',
            radius: ['15%', '50%'],
            itemStyle: {
                borderRadius: 5
            },
            data: []
            }
        ]
    };
    option && myChart.setOption(option);

    window.registerPeriodFilterCallback(function (periodFilter) {
        var url = 'install/mode/' + periodFilter;

        fetch(url, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(response => {
            return response.json();
        })
        .then(json => {
            myChart.setOption({series:[{data:json}]});
        })
        .catch(error => {
            console.error('an error occured: ', error);
        });

    })

});
</script>
