{% include 'telemetry/osfamily-modal.html.twig' %}
    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="d-flex flex-row-reverse p-2 pb-0">
                <button type="button" class="btn p-1" id="os_family_lg" data-bs-toggle="modal" data-bs-target="#osfamilyModal">
                    <i class="ti ti-arrows-maximize"></i>
                </button>
            </div>
            <div class="card-body default-size pt-0" id="os_family">
            </div>
        </div>
    </div>

<script>
window.addEventListener("DOMContentLoaded", (event) => {

    var chartDom = document.getElementById("os_family");
    var myChart = echarts.init(chartDom);

    var largeChartDom = document.getElementById("os_family_large");
    var largeChart = echarts.init(largeChartDom);

    option = {
        title: {
            text: 'Operating Systems',
            left: 'center'
        },
        tooltip: {
            trigger: 'item',
            formatter: '{d}%'
        },
        series: [
            {
            name: 'OS / Instances',
            type: 'pie',
            radius: ['30%', '70%'],
            avoidLabelOverlap: false,
            itemStyle: {
                borderRadius: 5,
            },
            tooltip: {
                trigger: 'item'
            },
            emphasis: {
                scale: true,
                scaleSize: 10,
            },
            data: []
            }
        ]
    };
    option && myChart.setOption(option);
    option && largeChart.setOption(option);

    window.registerFilterCallback(function (filters) {
        var url = 'os/family?' + new URLSearchParams(filters);
        var arrayObj = [];

        fetch(url, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(response => {
            return response.json();
        })
        .then(json => {
            window.clearResults();
            window.registerResults(json);
            console.log(json);
            myChart.setOption({series:[{data:json}]});
            largeChart.setOption({series:[{data:json}]});
        })
        .catch(error => {
            console.error('an error occured: ', error);
        });

    })

});
</script>
