{% include 'telemetry/topplugin-modal.html.twig' %}
    <div class="col-sm-6 col-lg-4">
        <div class="card">
            <div class="d-flex flex-row-reverse p-2 pb-0">
                <button type="button" class="btn p-1" id="top_plugin_lg" data-bs-toggle="modal" data-bs-target="#toppluginModal">
                    <i class="ti ti-arrows-maximize"></i>
                </button>
            </div>
            <div class="card-body default-size pt-0" id="top_plugin">
            </div>
        </div>
    </div>

<script>
window.addEventListener("DOMContentLoaded", (event) => {

    var chartDom = document.getElementById("top_plugin");
    var myChart = echarts.init(chartDom);

    var largeChartDom = document.getElementById("top_plugin_large");
    var largeChart = echarts.init(largeChartDom);

    option = {
        title: {
            text: 'Top 10 plugins',
            left: 'center',
        },
        series: [
            {
            name: 'Nightingale Chart',
            type: 'pie',
            top: 30,
            radius: [20, 70],
            avoidLabelOverlap: false,
            center: ['50%', '50%'],
            roseType: 'area',
            itemStyle: {
                borderRadius: 3
            },
        data: []
        }
        ]
    };

    option && myChart.setOption(option);
    option && largeChart.setOption(option);

    window.registerFilterCallback(function (filters) {
        var url = 'top/plugin?' + new URLSearchParams(filters);
        var arrayObj = [];

        fetch(url, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(response => {
            return response.json();
        })
        .then(json => {
            window.clearResults();
            window.registerResults(json);
            console.log(json);
            myChart.setOption({series:[{data:json}]});
            largeChart.setOption({series:[{data:json}]});
        })
        .catch(error => {
            console.error('an error occured: ', error);
        });

    })

})
</script>