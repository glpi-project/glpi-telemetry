{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('build/js/dashboard.js') }}" defer></script>
{% endblock %}

{% block body_content %}
	<div class="container-xl">
		<div class="row g-2 align-items-center">
			<div class="col">
				<div class="page-title">Telemetry</div>
			</div>
			<div class="col-auto ms-auto d-print-none">
				<div class="form-floating">
					<select class="form-select" id="dataPeriod" aria-label="select data period">
						<option value="last-12-months" selected>Last 12 months</option>
						<option value="last-5-years">Five Last Years</option>
						<option value="always">Always</option>
					</select>
					<label for="dataPeriod">
						Select :
					</label>
				</div>
			</div>
		</div>
	</div>

		<div class="container-xl mt-4">
			<div class="row row-deck row-cards">
				<div class="col-sm-6 col-lg-6" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::GlpiVersion').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Bar').value }}"></div>
				<div class="col-sm-6 col-lg-6" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::PhpInfos').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Bar').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::OsFamily').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Pie').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::WebEngine').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Pie').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::InstallMode').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Pie').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::DbEngine').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Pie').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::TopPlugin').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::NightingaleRose').value }}"></div>
				<div class="col-sm-4 col-lg-4" data-chart-serie="{{ constant('App\\Telemetry\\ChartSerie::DefaultLanguage').value }}" data-chart-type="{{ constant('App\\Telemetry\\ChartType::Pie').value }}"></div>
			</div>
		</div>

{% endblock %}
