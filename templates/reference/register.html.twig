{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer></script>
{% endblock %}

{% block body_content %}
<div class="container container-tight py-4">
    <div class="card card-md">
        {{ form_start(form, {'attr': {'id': 'reference_form'}}) }}
            <div class="card-body">
                <h2 class="card-title mb-3"> Register your GLPI instance</h2>
                <p class="card-subtitle mb-4">We maintain a public database of registered GLPI installations. We invite you to register your own GLPI instance.</p>
                <div class="form-group">
                    <div class="mb-3">
                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.url, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.country, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.referent, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.nb_assets, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.nb_helpdesk, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.comment, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="cf-turnstile" data-sitekey="{{ captchaSiteKey }}" data-response-field-name="captcha_token"></div>
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary ms-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                    Register
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
