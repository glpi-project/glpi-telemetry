<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header header-bg">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Register your instance</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
            {{ form_start(form) }}
              {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.url, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.country, {'attr': {'class': 'form-select'}}) }}
              {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.referent, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.nb_assets, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.nb_helpdesk, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(form.comment, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Register</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
            {{ form_end(form) }}
    </div>
  </div>
</div>
