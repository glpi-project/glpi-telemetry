<div class="container-fluid bg-light p-3 my-3 rounded-3">

    <div class="bg-white p-5 container-md contact-form">
        <div class="form-group">
            {{ form_start(form) }}
            {{ form_row(form.Email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.Subject, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.Message, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-2">
                    <div id="turnstileWidget"></div>
        </div>

        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary pt-1 pb-1 mt-2">
        </div>

            {{ form_end(form) }}
    </div>
</div>

<script>
window.onloadTurnstileCallback = function () {
    turnstile.render('#turnstileWidget', {
        sitekey: '0x4AAAAAAAKWNCQQXKCgCFMQ', //real sitekey
        theme: 'light',
        callback: function(token) {
            console.log(`Challenge Success ${token}`);
        },
    });
};
</script>