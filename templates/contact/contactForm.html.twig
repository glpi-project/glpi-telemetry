<div class="page-header d-print-none">
    <div class="container-xl mt-1">
        <div class="row g-2 align-items-center">

                    <div class="col">Any question about GLPI ? Feel free to ask us</div>
                    <div class="page-title">Contact</div>

        </div>

        <div class="mt-2 py-3 bg-white container-md contact-form">
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_row(form.Email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.Subject, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.Message, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-2">
                        <div id="turnstileWidget"></div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary pt-1 pb-1 mt-2">
                </div>

                    {{ form_end(form) }}
            </div>
    </div>
</div>

<script>
window.onloadTurnstileCallback = function () {
    var captchaSiteKey = '{{ captchaSiteKey }}';
    turnstile.render('#turnstileWidget', {
        sitekey: captchaSiteKey,
        theme: 'light',
        callback: function(token) {
            //console.log(token);
            captchaTokenValidation(token);
        },
    });
};
</script>